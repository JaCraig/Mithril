@section Scripts {
    <script>
        let HeaderApp = Vue.createApp({
            data: function() {
                return { items: [{ url: "A",display: "AAA" }] };
            },
            created: function() {
                let that = this;
                defaultTheme.Request.post('/api/query', {
                    query: `query{
          menu(name: "SideMenu"){
            display
            menuItems {
              description
              display
              icon
              order
              url
            }
          }
        }`
                })
                    .onSuccess((data) => {
                        that.items = data.data.menu.menuItems;
                    })
                    .setMode(defaultTheme.StorageMode.StorageAndUpdate)
                    .send();
            }
        });
        TempDefaultTheme.Core.SetupComponents(HeaderApp);
        HeaderApp.mount("header");
    </script>
