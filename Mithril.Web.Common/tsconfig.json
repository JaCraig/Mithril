{
  "compilerOptions": {
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "ES2017",
    "jsx": "react",
    "allowJs": true,
    "removeComments": true,
    "declaration": false,
    "moduleResolution": "node",
    "types": [],
    "esModuleInterop": true,
    "baseUrl": "."
  },

  "include": [
    "build/ts/**/*.ts",
    "build/ts/**/*.vue"
  ],
  "files": [
    "build/vue-shims.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}