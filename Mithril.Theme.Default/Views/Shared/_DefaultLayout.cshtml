<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#8bb2d9" />

    @await RenderSectionAsync("Meta", required: false)

    @await RenderSectionAsync("Styles", required: false)

    @ResourceHolder?.Render(ResourceType.Meta)

    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="/DefaultTheme/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/DefaultTheme/css/Mithril.styles.css" />
    @ResourceHolder?.Render(ResourceType.CSS)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Mithril</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="EmailTest">Email Test</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div>Default Theme</div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Mithril - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="/DefaultTheme/lib/jquery/dist/jquery.min.js"></script>
    <script src="/DefaultTheme/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/DefaultTheme/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @ResourceHolder?.Render(ResourceType.JavaScript)
</body>
</html>
